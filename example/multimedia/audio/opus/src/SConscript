CPPPATH += [os.path.join(cwd, '../../../../../external/opus-1.4/celt')]
CPPPATH += [os.path.join(cwd, '../../../../../external/opus-1.4')]

group = DefineGroup('Applications', src, depend = [''], CPPPATH = CPPPATH)

