# Get current directory
cwd = GetCurrentDir()

# Add source code
src = Glob('*.c')

CPPPATH = []
CPPPATH += [os.path.join(cwd, '../../../../../external/opus-1.4/include')]
CPPPATH += [os.path.join(cwd, '../../../../../external/opus-1.4/src')]
